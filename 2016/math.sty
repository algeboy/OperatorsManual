% I like a good empty set character.
\renewcommand{\emptyset}{\varnothing}

% Not equivalent
\providecommand{\nequiv}{\equiv\hspace{-2.5ex}/~}


% Normal subgroup or equal.
\providecommand{\normaleq}{\unlhd}
% Normal subgroup.
\providecommand{\normal}{\lhd}
% canonical group action
\providecommand{\act}[1]{~{}^{#1}}

% Divides, does not divide.
\providecommand{\divides}{\mid}
\providecommand{\ndivides}{\nmid}

% Generator brackets.
\providecommand{\gen}[1]{\langle #1 \rangle}

% Power set symbol.
\providecommand{\power}{\mathcal{P}}

\providecommand{\union}{\cup}
\providecommand{\bigunion}{\bigcup}
\providecommand{\intersect}{\cap}
\providecommand{\bigintersect}{\bigcap}

%disjoint unions.
\providecommand{\dunion}{\overset{\circ}{\cup}}
\providecommand{\bigdunion}{\overset{\circ}\bigcup}
%natural embedding.
\newcommand{\embedded}{\hookrightarrow}
%defined equivalence
\newcommand{\defeq}{\rightleftharpoons}


\newcommand{\displaybox}[3]{
	\index{#1}
	\begin{center}
		\begin{minipage}[t]{0.9\textwidth}
			{\color{darkblue}  #3 #1 }\\
			\framebox{\begin{minipage}[t]{\textwidth} #2 \end{minipage}}
		\end{minipage}
	\end{center}
}

\newcommand{\important}[2]{
	\displaybox{#1}{#2}{}
}

\newcommand{\caution}[2]{
	\displaybox{#1}{#2}{Caution}
}




