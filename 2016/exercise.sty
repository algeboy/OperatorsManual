\ProcessOptions\relax

\newcounter{exercount}[chapter]
\numberwithin{exercount}{chapter}
\newwrite\tf@exerlist

\def\exerList{\tf@exerlist}

\def\closeExerList{\immediate\closeout\tf@exerlist}

\newenvironment{exer}[1][]{
	\addtocounter{exercount}{1}
	\label{exer:\thechapter.\theexercount}
	\smallskip
	\index{#1}
	\addToList{\tf@exerlist}{\theexercount}{\phantom{T/F }#1}%

	\noindent{{\bf \theexercount} \ \ {\bf #1} \ }
}
{
\vskip-\parskip\smallskip
}

\newenvironment{exerTF}[1][]{
	\addtocounter{exercount}{1}
	\label{exer:\thechapter.\theexercount}
	\smallskip
	\index{#1}
	\index{True/False!#1}
	\addToList{\tf@exerlist}{\theexercount}{T/F #1}
	\noindent{{\bf \theexercount} {\bf #1} True or False?}
}
{
\vskip-\parskip\smallskip
}


