\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tex-preambles/BauStijl}[2002/08/29 Jacques]

\usepackage{fancyhdr}

\DeclareOption{marginpage}{\marginpage}
\DeclareOption{widepage}{\widepage}
\DeclareOption{headers}{\headers}

\newcommand{\widepage}{
	\topmargin 0pt
	\advance \topmargin by -\headheight
	\advance \topmargin by -\headsep
     
	\textheight 8.9in
     
	\oddsidemargin 0pt
	\evensidemargin \oddsidemargin
	\marginparwidth 0.5in
     
	\textwidth 6.5in
}

\newcommand{\marginpage}{
	\voffset -0.5in
	\marginparsep 0.25in
	\textheight 9in
	%\oddsidemargin 0.125in
	%\evensidemargin 1.625in
}


\@ifundefined{chapter}{
	\typeout{No chapters, using only sections....}
}{
	\renewcommand{\chaptermark}[1]{\markboth{\textsf{#1}}{}}
}

\renewcommand{\sectionmark}[1]{\markright{\thesection\ \textsf{#1}}{}}

\newcommand{\headers}{
	\pagestyle{fancy}
	\renewcommand{\headrulewidth}{0pt}
	%% Extend the header width over the margin.
	\addtolength{\headwidth}{\marginparsep}
	\addtolength{\headwidth}{\marginparwidth}
 	%% Include less info in the headers.
	\fancyhf{}
	%\fancyhead[LE]{\rule[-4pt]{4em}{15pt}%
	%\hspace*{-3em}\textcolor{white}{\bfseries\thepage}}
	%\fancyhead[LE,RO]{\framebox[4em][c]{\helvetica{b}{12}\textbf{\thepage}}}
	\fancyhead[LE,RO]{\fcolorbox{white}{teal!10}{\helvetica{m}{12}\thepage}}
	\fancyhead[LO]{\helvetica{m}{12}\rightmark}
	\fancyhead[RE]{\helvetica{m}{12}\leftmark}
	\fancyhead[CO]{\helvetica{b}{10}\textbf{}}
}

\ProcessOptions\relax


\newcommand{\helvetica}[2]
{\fontfamily{phv}\fontseries{#1}\fontsize{#2}{10}\selectfont}

\newcommand{\latinsans}[2]
{\fontfamily{lmss}\fontseries{#1}\fontsize{#2}{10}\selectfont}

